{
    "manifest_version": 3,
    "name": "TXST ProfessorView",
    "version": "2.0.0",
    "description": "Rate My Professor Plugin for TXST Class Search. See professor ratings directly in TXST Class Search.",
    "author": "matthew.r.wallace@live.com",
    "homepage_url": "https://github.com/MattRWallace/TXSTProfessorView",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "host_permissions": [
        "https://*.ratemyprofessors.com/*",
        "https://reg-prod.ec.txstate.edu/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://reg-prod.ec.txstate.edu/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{d1782ac6-ca7a-49c6-adc2-af91642b2a75}",
            "data_collection_permissions": {
                "required": ["websiteContent"]
            }
        }
    }
}